<Window x:Class="Project_Stroymagazin.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Карточка товара" Height="650" Width="500"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5"
        SizeToContent="Height" ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="30" Width="Auto">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="ДАННЫЕ ТОВАРА" FontWeight="Bold" Foreground="#1A237E" HorizontalAlignment="Center" Margin="0,0,0,20" FontSize="18"/>

                <TextBlock Text="Наименование:" Margin="0,5,0,2"/>
                <TextBox x:Name="NameBox" Padding="8" Margin="0,0,0,10"/>

                <Grid Margin="0,5,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Артикул (SKU):" Margin="0,0,0,2"/>
                        <TextBox x:Name="SKUBox" Padding="8"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Штрихкод:" Margin="0,0,0,2"/>
                        <TextBox x:Name="BarcodeBox" Padding="8"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Категория:" Margin="0,5,0,2"/>
                <ComboBox x:Name="CategoryCombo" Padding="8" Margin="0,0,0,10" DisplayMemberPath="Name"/>

                <Grid Margin="0,5,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Розничная цена (₽):" Margin="0,0,0,2"/>
                        <TextBox x:Name="PriceBox" Padding="8"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Единица измерения:" Margin="0,0,0,2"/>
                        <TextBox x:Name="UnitBox" Padding="8" Text="шт"/>
                    </StackPanel>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Сохранить" Click="Save_Click"
                            Background="#2E7D32" Foreground="White" Padding="10" BorderThickness="0" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Grid.Column="2" Content="Отмена" Click="Cancel_Click"
                            Background="#E0E0E0" Foreground="#333" Padding="10" BorderThickness="0" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
