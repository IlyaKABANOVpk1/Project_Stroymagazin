<Window x:Class="Project_Stroymagazin.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="450" Width="350"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="None" Background="Transparent" AllowsTransparency="True">

    <Border CornerRadius="20" Background="#F5F5F5" BorderBrush="#DDD" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <StackPanel>
                    <TextBlock Text="СТРОЙМАГАЗИН" HorizontalAlignment="Center" 
                               FontSize="22" FontWeight="Bold" Foreground="#333"/>
                    <TextBlock Text="Вход в систему" HorizontalAlignment="Center" 
                               FontSize="14" Foreground="#777" Margin="0,5,0,20"/>
                </StackPanel>
                <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top"
                        Background="Transparent" BorderThickness="0" Cursor="Hand"
                        Click="CloseButton_Click" FontSize="16" Foreground="#999"/>
            </Grid>

            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="Логин" Foreground="#555" Margin="0,0,0,5"/>
                <Border Background="White" CornerRadius="5" BorderBrush="#CCC" BorderThickness="1" Padding="5">
                    <TextBox x:Name="LoginBox" BorderThickness="0" FontSize="16" Padding="2"/>
                </Border>

                <TextBlock Text="Пароль" Foreground="#555" Margin="0,15,0,5"/>
                <Border Background="White" CornerRadius="5" BorderBrush="#CCC" BorderThickness="1" Padding="5">
                    <PasswordBox x:Name="PassBox" BorderThickness="0" FontSize="16" Padding="2"/>
                </Border>

                <TextBlock x:Name="ErrorText" Foreground="Red" FontSize="12" Margin="0,10,0,0" 
                           TextWrapping="Wrap" HorizontalAlignment="Center"/>
            </StackPanel>

            <Button Grid.Row="2" Content="ВОЙТИ" Height="45" Margin="0,20,0,0"
                    Click="LoginButton_Click" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="5" Background="#4CAF50">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" 
                                              TextElement.Foreground="White" TextElement.FontWeight="Bold"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#43A047"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2E7D32"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</Window>