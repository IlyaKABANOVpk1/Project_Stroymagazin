<Page x:Class="Project_Stroymagazin.Pages.ShipmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Оформление отгрузки/списания" Background="#F5F5F5" FontFamily="Segoe UI">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15">
            <StackPanel>
                <TextBlock Text="Детали списания" FontWeight="SemiBold" FontSize="18" Margin="0,0,0,10"/>

                <TextBlock Text="Причина списания (Оптовая продажа, Брак, Инвентаризация):" Margin="0,5,0,2"/>
                <TextBox x:Name="ReasonBox" Padding="8" Margin="0,0,0,15"/>

                <TextBlock Text="Склад списания:" Margin="0,5,0,2"/>
                <ComboBox x:Name="WarehouseCombo" DisplayMemberPath="Name" SelectedValuePath="Id" Margin="0,0,0,15"/>

                <Separator Margin="0,10"/>

                <TextBlock Text="Поиск товара (SKU, Штрихкод или Название):" Margin="0,5,0,2"/>
                <TextBox x:Name="SearchBox" Padding="8" KeyDown="SearchBox_KeyDown" FontSize="14"/>

                <TextBlock Text="Выбранный товар:" Margin="0,15,0,5"/>
                <TextBlock x:Name="SelectedProductText" Text="-" FontSize="16" FontWeight="Bold" Foreground="#1A237E"/>

                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Количество к списанию:" Margin="0,0,0,5"/>
                        <TextBox x:Name="QuantityBox" Padding="8" Text="1"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,10,0">
                        <TextBlock Text="Цена для учета (себестоимость/закупка):" Margin="0,0,0,5"/>
                        <TextBox x:Name="PriceBox" Padding="8" Text="0.00"/>
                    </StackPanel>

                    <Button Grid.Column="2" Content="Добавить в документ" Click="AddItemToShipment_Click" VerticalAlignment="Bottom"
                            Background="#FF9800" Foreground="White" Padding="20,10" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </StackPanel>
        </Border>

        <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Товары на отгрузку/списание" FontWeight="SemiBold" FontSize="18" Margin="0,0,0,10"/>

                <DataGrid x:Name="ShipmentGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" 
                          IsReadOnly="True" HeadersVisibility="Column" BorderBrush="#E0E0E0" Margin="0,0,0,10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Товар" Binding="{Binding Product.Name}" Width="*"/>
                        <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="70"/>
                        <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat=C2}" Width="100"/>
                        <DataGridTemplateColumn Width="40">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="X" Click="RemoveItem_Click" Tag="{Binding .}" Background="Transparent" Foreground="Red" BorderThickness="0" Cursor="Hand"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <Button Grid.Row="2" Content="ОФОРМИТЬ СПИСАНИЕ" Click="FinalizeShipment_Click"
                        Background="#D32F2F" Foreground="White" Padding="20,15" BorderThickness="0" FontSize="18" FontWeight="Bold">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>