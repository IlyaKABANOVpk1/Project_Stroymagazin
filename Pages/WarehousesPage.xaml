<Page x:Class="Project_Stroymagazin.Views.Pages.WarehousesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Склады" Background="White" FontFamily="Segoe UI">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#E8EAF6" CornerRadius="5" Padding="15" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Новый склад:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,15,0" Foreground="#1A237E"/>

                <TextBox x:Name="NewNameBox" Width="200" Padding="5" Margin="0,0,10,0" Tag="Название склада" ToolTip="Название склада"/>
                <TextBox x:Name="NewAddressBox" Width="300" Padding="5" Margin="0,0,10,0" Tag="Адрес" ToolTip="Адрес"/>

                <Button Content="Добавить" Click="AddWarehouse_Click"
                        Background="#1A237E" Foreground="White" Padding="15,5" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>

        <DataGrid x:Name="WarehousesGrid" Grid.Row="1" AutoGenerateColumns="False" 
                  CanUserAddRows="False" IsReadOnly="True"
                  GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                  RowHeight="35" ColumnHeaderHeight="40" BorderBrush="#E0E0E0">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="10,0"/>
                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                    <Setter Property="BorderBrush" Value="#1A237E"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Адрес" Binding="{Binding Address}" Width="*"/>

                <DataGridTemplateColumn Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Удалить" Click="Delete_Click" Tag="{Binding Id}"
                                    Background="Transparent" Foreground="#D32F2F" BorderThickness="0" Cursor="Hand"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>