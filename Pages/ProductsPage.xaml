<Page x:Class="Project_Stroymagazin.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Товары" Background="White" FontFamily="Segoe UI">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button Content="+ Новый товар" Click="AddProduct_Click"
                        Background="#1A237E" Foreground="White" Padding="15,8" BorderThickness="0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="Обновить" Click="Refresh_Click" Margin="10,0,0,0"
                        Background="White" BorderBrush="#CCC" BorderThickness="1" Padding="15,8" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>

            <TextBox x:Name="SearchBox" Grid.Column="1" Width="300" HorizontalAlignment="Right" Padding="8"
                     TextChanged="SearchBox_TextChanged" ToolTip="Поиск по названию или SKU"/>
        </Grid>

        <DataGrid x:Name="ProductsGrid" Grid.Row="1" AutoGenerateColumns="False" 
                  CanUserAddRows="False" IsReadOnly="True"
                  GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                  RowHeight="35" ColumnHeaderHeight="40" BorderBrush="#EEEEEE">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#F5F5F5"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="10,0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="SKU" Binding="{Binding SKU}" Width="100"/>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category.Name}" Width="150"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat={}{0:N2} ₽}" Width="100"/>
                <DataGridTextColumn Header="Ед. изм." Binding="{Binding UnitOfMeasure}" Width="80"/>

                <DataGridTemplateColumn Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Ред." Click="EditProduct_Click" Tag="{Binding .}"
                                        Background="#E3F2FD" Foreground="#1565C0" Margin="0,0,5,0" Padding="10,5" BorderThickness="0" Cursor="Hand"/>
                                <Button Content="Уд." Click="DeleteProduct_Click" Tag="{Binding Id}"
                                        Background="#FFEBEE" Foreground="#D32F2F" Padding="10,5" BorderThickness="0" Cursor="Hand"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
