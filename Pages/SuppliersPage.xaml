<Page x:Class="Project_Stroymagazin.Pages.SuppliersPage"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Поставщики" Background="White" FontFamily="Segoe UI">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button Content="+ Добавить поставщика" Click="AddSupplier_Click"
                        Background="#1A237E" Foreground="White" Padding="15,8" BorderThickness="0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Обновить" Click="LoadData" Margin="10,0,0,0"
                        Background="White" BorderBrush="#CCC" BorderThickness="1" Padding="15,8" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>

            <TextBox x:Name="SearchBox" Grid.Column="1" Width="300" HorizontalAlignment="Right" Padding="8"
                     TextChanged="SearchBox_TextChanged" ToolTip="Поиск по названию или контактам"/>
        </Grid>

        <DataGrid x:Name="SuppliersGrid" Grid.Row="1" AutoGenerateColumns="False" 
                  CanUserAddRows="False" IsReadOnly="True"
                  GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                  RowHeight="40" ColumnHeaderHeight="40" BorderBrush="#EEEEEE">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#F5F5F5"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="10,0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Название компании" Binding="{Binding Name}" Width="2*"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="1.5*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="2*"/>

                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Изменить" Click="EditSupplier_Click" Tag="{Binding .}"
                                        Background="#E3F2FD" Foreground="#1565C0" Margin="0,0,5,0" BorderThickness="0" Cursor="Hand"/>
                                <Button Content="Удалить" Click="DeleteSupplier_Click" Tag="{Binding Id}"
                                        Background="#FFEBEE" Foreground="#D32F2F" BorderThickness="0" Cursor="Hand"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
