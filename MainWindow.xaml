<Window x:Class="Project_Stroymagazin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Строймагазин — Управление" Height="768" Width="1280"
        WindowStartupLocation="CenterScreen" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#1A237E">
            <StackPanel>
                <TextBlock Text="СТРОЙМАГАЗИН" Foreground="White" FontSize="20" FontWeight="Bold"
                           Margin="0,30,0,5" HorizontalAlignment="Center"/>
                <TextBlock Text="Учет товаров" Foreground="#C5CAE9" FontSize="14" 
                           Margin="0,0,0,30" HorizontalAlignment="Center"/>

                <Border Background="#283593" Margin="10,0,10,20" Padding="10" CornerRadius="5">
                    <StackPanel>
                        <TextBlock x:Name="UserFullNameText" Text="Иванов И.И." Foreground="White" FontWeight="SemiBold"/>
                        <TextBlock x:Name="UserRoleText" Text="Администратор" Foreground="#9FA8DA" FontSize="12" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <StackPanel x:Name="MenuPanel"/>

                <Button Content="Выйти из системы" Click="Logout_Click" Margin="20,40,20,0" 
                        Background="#D32F2F" Foreground="White" BorderThickness="0" Height="35" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="brd" Background="{TemplateBinding Background}" CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="brd" Property="Background" Value="#B71C1C"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Background="#F5F5F5">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1" Direction="270"/>
                </Border.Effect>

                <Grid>
                    <TextBlock x:Name="PageTitleText" Text="Главная панель" VerticalAlignment="Center" 
                               Margin="30,0" FontSize="22" FontWeight="Light" Foreground="#333"/>
                </Grid>
            </Border>

            <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" Margin="20"/>
        </Grid>
    </Grid>
</Window>
    
