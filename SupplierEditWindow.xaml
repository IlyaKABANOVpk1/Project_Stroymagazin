<Window x:Class="Project_Stroymagazin.SupplierEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Поставщик" Height="400" Width="450"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5"
        SizeToContent="Height" ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="30" Width="Auto">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="ДАННЫЕ ПОСТАВЩИКА" FontWeight="Bold" Foreground="#1A237E" HorizontalAlignment="Center" Margin="0,0,0,20" FontSize="18"/>

                <TextBlock Text="Название компании:" Margin="0,5,0,2"/>
                <TextBox x:Name="NameBox" Padding="8" Margin="0,0,0,10"/>

                <TextBlock Text="Телефон:" Margin="0,5,0,2"/>
                <TextBox x:Name="PhoneBox" Padding="8" Margin="0,0,0,10"/>

                <TextBlock Text="Email:" Margin="0,5,0,2"/>
                <TextBox x:Name="EmailBox" Padding="8" Margin="0,0,0,20"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Сохранить" Click="Save_Click"
                            Background="#2E7D32" Foreground="White" Padding="10" BorderThickness="0" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Grid.Column="2" Content="Отмена" Click="Cancel_Click"
                            Background="#E0E0E0" Foreground="#333" Padding="10" BorderThickness="0" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
