<Window x:Class="Project_Stroymagazin.TransactionDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Детали операции" Height="400" Width="500" 
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="HeaderTitle" Text="Детали операции" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="#1A237E"/>

            <DataGrid x:Name="DetailsGrid" AutoGenerateColumns="False" IsReadOnly="True" Height="200" Background="White">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Товар" Binding="{Binding Product.Name}" Width="2*"/>
                    <DataGridTextColumn Header="Артикул" Binding="{Binding Product.SKU}" Width="*"/>
                    <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <Button Content="Закрыть" Click="Close_Click" Margin="0,20,0,0" Width="100" Padding="5" Background="#E0E0E0" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
