<Window x:Class="Project_Stroymagazin.DatabaseViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Просмотр базы данных"
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

      
        <Border Grid.Column="0" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
            <StackPanel>
                <TextBlock Text="Таблицы" FontWeight="SemiBold" FontSize="16" Margin="15,10"/>
                <ListBox x:Name="TablesListBox"
                         ItemsSource="{Binding TableNames}"
                         SelectedItem="{Binding SelectedTable}"
                         Margin="10"
                         Padding="5">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontSize="14" Padding="8,6"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

       
        <Grid Grid.Column="1" Margin="15,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

           
            <TextBlock Grid.Row="0"
                       Text="{Binding SelectedTable, StringFormat='Таблица: {0}'}"
                       FontSize="18"
                       FontWeight="Medium"
                       Foreground="#1A3E6F"
                       Margin="0,0,0,10"/>

            
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding TableData}"
                      AutoGenerateColumns="True"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      GridLinesVisibility="All"
                      HeadersVisibility="Column"
                      Margin="0,0,0,10"/>

            
            <TextBlock Grid.Row="2"
                       Text="{Binding StatusMessage}"
                       Foreground="#666"
                       FontSize="13"/>
        </Grid>
    </Grid>
</Window>
